# Next.js (optional)
# For local dev, point to Django backend so the frontend can call the API.
NEXT_PUBLIC_API_BASE=http://localhost:8000

# Django
SECRET_KEY=your-secret-key-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,.vercel.app

# Database: use Neon in production. Leave unset for SQLite (dev).
# DATABASE_URL=postgresql://user:password@host/database?sslmode=require
# Or Neon PG* vars:
# PGHOST=
# PGDATABASE=
# PGUSER=
# PGPASSWORD=
# PGPORT=5432

# Cron: secret for /api/v1/cron/run-checks (Vercel Cron or manual trigger).
# Set in Vercel project env; use same value when calling the endpoint (e.g. ?secret=... or Authorization: Bearer <CRON_SECRET>).
CRON_SECRET=your-cron-secret

# CORS (optional; defaults to http://localhost:3000)
# CORS_ORIGINS=http://localhost:3000,https://your-app.vercel.app
